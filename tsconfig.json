{
    "compilerOptions": {
        "outDir": "es",
        "target": "es6",
        "module": "CommonJS",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "types": ["jest"],
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "allowJs": true,
        "lib": ["ESNext", "DOM"]
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "lib",
        "es",
        "dist",
        "typings",
        "**/__tests__",
        "**/__test__",
        "test",
        "**/__demo__",
        "**/__website__"
    ]
}
